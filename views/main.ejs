<%- include('partials/header') %>

    <main class="main">
        <!------------------------------ HOME -------------------------------->
        <section class="home" id="home">
            <img src="img/home1.jpg" alt="Jammu Kashmir" class="home--img" />

            <div class="home--container container grid">
                <div class="home--data">
                    <span class="home--data-subtitle">Discover your place</span>
                    <h1 class="home--data-title">
                        Explore The <br /> Paradise <b/>Jammu Kashmir
                    </h1>
                    <a href="#place" class="button">Explore</a>
                </div>

                <div class="home--social">
                    <a href="https://www.facebook.com/jktravels" target="_blank" class="home--social-link">
                        <i class="ri-facebook-box-fill"></i>
                    </a>
                    <a href="https://www.instagram.com/travelling.jk" target="_blank" class="home--social-link">
                        <i class="ri-instagram-fill"></i>
                    </a>
                    <a href="https://twitter.com/travellingjk" target="_blank" class="home--social-link">
                        <i class="ri-twitter-fill"></i>
                    </a>
                </div>

                <div class="home--info">
                    <div>
                        <span class="home--info-title">5 best place to visit</span>
                        <a href="#place" class="button button--flex button--link home--info-button"> More <i class="ri-arrow-right-line"></i> </a>
                    </div>

                    <div class="home--info-overlay">
                        <img src="img/home2.jpg" alt="Home 2" class="home--info-img" />
                    </div>
                </div>
            </div>
        </section>

        <!------------------------------ ABOUT -------------------------------->
        <section class="about section" id="about">
            <div class="about--container container grid">
                <div class="about--data">
                    <h2 class="section--title about--title">
                        More Information <br /> About The Best Places in Jammu and Kashmir
                    </h2>
                    <p class="about--description">
                        You can find the most beautiful and pleasant places at the best prices with special discounts, you choose the place we will guide you all the way to wait, get your place now.
                    </p>
                    <a href="#place" class="button">Reserve a place</a>
                </div>

                <div class="about--img">
                    <div class="about--img-overlay">
                        <img src="img/about1.jpg" alt="About 1" class="about--img-one" />
                    </div>

                    <div class="about--img-overlay">
                        <img src="img/about2.jpg" alt="About 2" class="about--img-two" />
                    </div>
                </div>
            </div>
        </section>

        <!------------------------------ DISCOVER -------------------------------->
        <section class="discover section" id="discover">
            <h2 class="section--title">
                Discover the most <br /> attractive place
            </h2>

            <div class="discover--container container swiper">
                <div class="swiper-wrapper">
                    <!------------------------------ Discover 1 -------------------------------->
                    <div class="discover--card swiper-slide">
                        <img src="img/kishtwar.jpg" alt="Discover 1" class="discover--img" />
                        <div class="discover--data">
                            <h2 class="discover--title">Kishtwar</h2>
                            <span class="discover--description">24 tours available</span>
                        </div>
                    </div>

                    <!------------------------------ Discover 2 -------------------------------->
                    <div class="discover--card swiper-slide">
                        <img src="img/ladakh.jpg" alt="Discover 2" class="discover--img" />
                        <div class="discover--data">
                            <h2 class="discover--title">Ladakh</h2>
                            <span class="discover--description">15 tours available</span>
                        </div>
                    </div>

                    <!------------------------------ Discover 3 -------------------------------->
                    <div class="discover--card swiper-slide">
                        <img src="img/vaishno-devi.jpg" alt="Discover 3" class="discover--img" />
                        <div class="discover--data">
                            <h2 class="discover--title">Vaishnodevi</h2>
                            <span class="discover--description">19 tours available</span>
                        </div>
                    </div>

                    <!------------------------------ Discover 4 -------------------------------->
                    <div class="discover--card swiper-slide">
                        <img src="img/manali.jpg" alt="Discover 4" class="discover--img" />
                        <div class="discover--data">
                            <h2 class="discover--title">Manali</h2>
                            <span class="discover--description">48 tours available</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!------------------------------ EXPERIENCE -------------------------------->
        <section class="experience section">
            <h2 class="section--title">
                With Our Experience <br /> We Will Serve You
            </h2>

            <div class="experience--container container grid">
                <div class="experience--content grid">
                    <div class="experience--data">
                        <h2 class="experience--number">15</h2>
                        <span class="experience--description">Year <br />
                                Experience</span
                            >
                        </div>

                        <div class="experience--data">
                            <h2 class="experience--number">80</h2>
                            <span class="experience--description"
                                >Complete <br />
                                tours</span
                            >
                        </div>

                        <div class="experience--data">
                            <h2 class="experience--number">750+</h2>
                            <span class="experience--description"
                                >Tourist <br />
                                Destinations In India</span
                            >
                        </div>
                    </div>

                    <div class="experience--img grid">
                        <div class="experience--img-overlay">
                            <img src="img/dal.jpg" alt="Experience 1" class="experience--img-one" />
                        </div>

                        <div class="experience--img-overlay">
                            <img src="img/sayoj.jpg" alt="Experience 2" class="experience--img-two" />
                        </div>
                    </div>
                </div>
            </section>

            <!------------------------------ VIDEO -------------------------------->
            <section class="video section">
                <h2 class="section--title">Video Tour</h2>

                <div class="video--container container">
                    <p class="video--description">Find out more with our video of the most beautiful and pleasant places for you and your family.</p>

                    <div class="video--content">
                        <video id="video-file">
                            <source src="video/video.mp4" type="video/mp4" />
                        </video>

                        <button class="button button--flex video--button" id="video-button">
                            <i class="ri-play-line video--icon" id="video-icon"></i>
                        </button>
                    </div>
                </div>
            </section>

            <!------------------------------ PLACE -------------------------------->
            <section class="place section" id="place">
                <h2 class="section--title">Choose Your Place</h2>

                <div class="place--container container swiper">
                    <div class="swiper-wrapper">
                        <!------------------------------ Place Card 1 -------------------------------->
                        <div class="place--card swiper-slide">
                            <img src="img/vaishno-devi.jpg" alt="Place 1" class="place--img" />

                            <div class="place--content">
                                <div class="place--rating">
                                    <i class="ri-star-line place--rating-icon"></i>
                                    <span class="place--rating-number">5.0</span>
                    </div>

                    <div class="place--data">
                        <div>
                            <h3 class="place--title">Vaishnodevi</h3>
                            <span class="place--subtitle">Jammu</span>
                        </div>
                        <span class="place--price">$1499</span>
                    </div>

                    <button class="button button--flex place--button">
                                    <i class="ri-arrow-right-line"></i>
                                </button>
                </div>
            </div>

            <!------------------------------ Place Card 2 -------------------------------->
            <div class="place--card swiper-slide">
                <img src="img/srinagar.jpg" alt="Place 2" class="place--img" />

                <div class="place--content">
                    <span class="place--rating">
                                    <i class="ri-star-line place--rating-icon"></i>
                                    <span class="place--rating-number">4.5</span>
                    </span>

                    <div class="place--data">
                        <div>
                            <h3 class="place--title">Srinagar</h3>
                            <span class="place--subtitle">Kashmir</span>
                        </div>
                        <span class="place--price">$1499</span>
                    </div>

                    <button class="button button--flex place--button">
                                    <i class="ri-arrow-right-line"></i>
                                </button>
                </div>
            </div>

            <!------------------------------ Place Card 3 -------------------------------->
            <div class="place--card swiper-slide">
                <img src="img/patnitop.jpg" alt="Place 3" class="place--img" />

                <div class="place--content">
                    <span class="place--rating">
                                    <i class="ri-star-line place--rating-icon"></i>
                                    <span class="place--rating-number">4.7</span>
                    </span>

                    <div class="place--data">
                        <div>
                            <h3 class="place--title">Patnitop</h3>
                            <span class="place--subtitle">Jammu</span>
                        </div>
                        <span class="place--price">$2450</span>
                    </div>

                    <button class="button button--flex place--button">
                                    <i class="ri-arrow-right-line"></i>
                                </button>
                </div>
            </div>

            <!------------------------------ Place Card 4 -------------------------------->
            <div class="place--card swiper-slide">
                <img src="img/ladakh.jpg" alt="Place 4" class="place--img" />

                <div class="place--content">
                    <span class="place--rating">
                                    <i class="ri-star-line place--rating-icon"></i>
                                    <span class="place--rating-number">4.7</span>
                    </span>

                    <div class="place--data">
                        <div>
                            <h3 class="place--title">Ladakh</h3>
                            <span class="place--subtitle">Kashmir</span>
                        </div>
                        <span class="place--price">$3000</span>
                    </div>

                    <button class="button button--flex place--button">
                                    <i class="ri-arrow-right-line"></i>
                                </button>
                </div>
            </div>

            <!------------------------------ Place Card 5 -------------------------------->
            <div class="place--card swiper-slide">
                <img src="img/doda.jpg" alt="Place 5" class="place--img" />

                <div class="place--content">
                    <span class="place--rating">
                                    <i class="ri-star-line place--rating-icon"></i>
                                    <span class="place--rating-number">4.3</span>
                    </span>

                    <div class="place--data">
                        <div>
                            <h3 class="place--title">Doda</h3>
                            <span class="place--subtitle">Jammu</span>
                        </div>
                        <span class="place--price">$1450</span>
                    </div>

                    <button class="button button--flex place--button">
                                    <i class="ri-arrow-right-line"></i>
                                </button>
                </div>
            </div>
            </div>
            </div>
        </section>

        <!------------------------------ SUBSCRIBE -------------------------------->
        <section class="subscribe section">
            <div class="subscribe--bg">
                <div class="subscribe--container container">
                    <h2 class="section--title subscribe--title">
                        Subscribe Our <br /> Newsletter
                    </h2>
                    <p class="subscribe--description">Subscribe to our newsletter and get a special 30% discount.</p>

                    <form action="" class="subscribe--form">
                        <input type="text" placeholder="Enter email" class="subscribe--input" />

                        <button class="button">Subscribe</button>
                    </form>
                </div>
            </div>
        </section>

        <!------------------------------ SPONSORS -------------------------------->
        <section class="sponsor section">
            <div class="sponsor--container container grid">
                <div class="sponsor--content">
                    <img src="img/sponsors1.png" alt="Sponsor 1" class="sponsor--img" />
                </div>
                <div class="sponsor--content">
                    <img src="img/sponsors2.png" alt="Sponsor 2" class="sponsor--img" />
                </div>
                <div class="sponsor--content">
                    <img src="img/sponsors3.png" alt="Sponsor 4" class="sponsor--img" />
                </div>
                <div class="sponsor--content">
                    <img src="img/sponsors4.png" alt="Sponsor 4" class="sponsor--img" />
                </div>
                <div class="sponsor--content">
                    <img src="img/sponsors5.png" alt="Sponsor 5" class="sponsor--img" />
                </div>
            </div>
        </section>
    </main>

<%- include('partials/footer') %>